#!/bin/bash
# Run Maven tests with auto-summary
# Usage: llmmvntest [module]   # Test specific module
#        llmmvntest            # Test from current dir

set -euo pipefail

if [[ $# -gt 0 ]]; then
    # Test specific module
    llmwatch "mvn clean test -pl $1 -am"
else
    # Test current directory
    llmwatch "mvn clean test"
fi
