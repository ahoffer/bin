#!/usr/bin/env bash
# qb – quick build helper
set -euo pipefail
IFS=$'\n\t'

########################################
# 1) Format code & licenses
########################################
mvnr license:format -T1C
mvnr com.spotify.fmt:fmt-maven-plugin:format -T1C

########################################
# 2) Ensure Yarn 4.5.1 via Corepack
########################################
corepack enable
yarn -v | grep -Eq '^v?4\.5\.1$' || corepack prepare yarn@4.5.1 --activate

########################################
# 3) Parse flags
########################################
RUN_CLEAN=true
ARGS=()

for arg in "$@"; do
  case "$arg" in
    --dirty|-dirty) RUN_CLEAN=false ;;   # drop the flag
    *)              ARGS+=("$arg")  ;;   # forward everything else
  esac
done

########################################
# 4) Build with Maven
########################################
CMD=(mvnr ${RUN_CLEAN:+clean} install -DskipTests "${ARGS[@]}")
echo "***************************************************"
echo "${CMD[*]}"
echo "***************************************************"
"${CMD[@]}"

