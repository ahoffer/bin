#!/bin/bash
# Quick Q&A - ask anything
# Usage: llm-ask "what's the syntax for bash arrays"
#        llm-ask "explain kubernetes services"

set -euo pipefail
source "$(dirname "$0")/ollama-lib"
ollama_require

if [[ $# -eq 0 ]]; then
    echo "Usage: llm-ask \"your question\"" >&2
    exit 1
fi

prompt="$*"

system="You are a helpful technical assistant. Answer concisely and accurately.
If showing code, keep it minimal and relevant.
If unsure, say so rather than guessing."

ollama_generate "$MODEL_CHAT" "$prompt" "$system"
