#!/bin/bash

# Check for required arguments
if [ "$#" -ne 2 ]; then
    echo "Usage: $0 <file-to-send> <port>"
    exit 1
fi

# Define variables
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
FILE="$1"
PORT="$2"

# Execute the Python script in multicast mode
python3 "$SCRIPT_DIR/send.py" multicast "$FILE" "$PORT"

