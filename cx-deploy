#!/bin/bash
set -euo pipefail

# Deploy a cx-search component to k3s
# Usage: cx-deploy [-r host] [-n namespace] <component>
# Examples:
#   cx-deploy graphql                  # Deploy graphql component
#   cx-deploy -r node2 edge            # Deploy to alternate host

readonly SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

usage() {
  sed -n '4,7p' "$0"
  echo -e "\nComponents: $(cx-config components | tr '\n' ' ')"
  exit 0
}

remote_host="bigfish"
namespace="octocx"
while [[ $# -gt 0 && "$1" == -* ]]; do
  case "$1" in
    -h|--help) usage ;;
    -r|--remote) remote_host="$2"; shift 2 ;;
    -n|--namespace) namespace="$2"; shift 2 ;;
    *) echo "Unknown option: $1" >&2; exit 1 ;;
  esac
done

readonly COMPONENT="${1:?Usage: cx-deploy [-r host] [-n namespace] <component>}"
readonly IMAGE=$("$SCRIPT_DIR/cx-config" image "$COMPONENT")
readonly DEPLOY=$("$SCRIPT_DIR/cx-config" deploy "$COMPONENT")
readonly TIMEOUT=$("$SCRIPT_DIR/cx-config" timeout "$COMPONENT")

echo "==> Deploying $COMPONENT"
echo "    Image:      $IMAGE"
echo "    Deployment: $DEPLOY"
echo "    Timeout:    ${TIMEOUT}s"

"$SCRIPT_DIR/deploy-image.sh" -r "$remote_host" -n "$namespace" -t "$TIMEOUT" "$IMAGE" "$DEPLOY"
