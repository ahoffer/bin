#!/bin/bash
#
# WiFi Network Scanner
#
# Display detailed information about available WiFi networks including SSID,
# frequency, BSSID, signal strength, data rate, and signal bars.

# Dump information about networks picked up by wifi adapter.

set -euo pipefail

if ! command -v nmcli >/dev/null 2>&1; then
  echo "Error: nmcli not found in PATH" >&2
  exit 1
fi

nmcli -f in-use,ssid,freq,bssid,signal,rate,bars  dev wifi
