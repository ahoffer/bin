#!/usr/bin/env bash
# aider in architect mode with auto-accept so you see the plan without prompts
exec aider \
  --architect \
  --model ollama_chat/qwen2.5-coder:14b-16k \
  --editor-edit-format diff \
  --read ~/.aider.conventions.md \
  --no-show-model-warnings \
  --no-show-release-notes \
  --no-suggest-shell-commands \
  --no-analytics \
  "$@"
