#!/usr/bin/env bash
# aider with plan mode. Architect proposes, user approves, editor implements.
# TODO: Replace with multi-agent framework when local models improve at tool-calling.
exec aider \
  --architect \
  --model ollama_chat/qwen2.5-coder:14b \
  --no-auto-accept-architect \
  --editor-edit-format diff \
  --read ~/.aider.conventions.md \
  --no-show-model-warnings \
  --no-show-release-notes \
  --no-suggest-shell-commands \
  --no-analytics \
  "$@"
